<?xml version="1.0" encoding="UTF-8"?>
<project name="x10.dist.macosx.x86" default="build.update.jar" basedir=".">
	<import file="../org.eclipse.imp.x10dt.feature/buildCommon.xml"/>
	<import file="../org.eclipse.imp.x10dt.update/buildPluginCommon.xml"/>

	<!-- ================================================================================= -->

	<target name="plugin.jar" depends="init,javaInit" unless="${plugin.jar.name}" description="Create jar: ${plugin.jar.name}.">
		<delete dir="${temp.folder}/${plugin.jar.name}.bin"/>
		<mkdir dir="${temp.folder}/${plugin.jar.name}.bin"/>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/${plugin.jar.name}.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bootclasspath}" source="${javacSource}" target="${javacTarget}">
			<compilerarg line="${compilerArg}"/>
			<classpath>
				<pathelement path="${plugin.dependencies}"/>
				<pathelement path="${eclipse.build.path}"/>
			</classpath>
			<src path="src/"/>
		</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/${plugin.jar.name}.bin" failonerror="true" overwrite="false">
			<fileset dir="src/" excludes="**/*.java,**/package.htm*"/>
		</copy>
		
		<!-- Note these could be copied from the common location in x10.dist, if platform matches -->
		<!-- pgas too, from that project - it's temporarily already under lib here -->
		<mkdir dir="${temp.folder}/${plugin.jar.name}.bin/lib"/>
		<copy todir="${temp.folder}/${plugin.jar.name}.bin/lib" failonerror="true" overwrite="false">
					<fileset dir="lib/"/>
		</copy>
		<mkdir dir="${temp.folder}/${plugin.jar.name}.bin/include"/>
		<copy todir="${temp.folder}/${plugin.jar.name}.bin/include" failonerror="true" overwrite="false">
					<fileset dir="include/"/>
		</copy>
		<echo message="done copying resources"/>
		<!-- Done copying resources -->
		
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/${plugin.jar.name}" basedir="${temp.folder}/${plugin.jar.name}.bin"
			manifest="META-INF/MANIFEST.MF"/>
		<!-- <delete dir="${temp.folder}/${plugin.jar.name}.bin"/> -->
		<echo message=" === not deleting temp.folder ${plugin.jar.name}.bin"/>
	</target>
</project>
