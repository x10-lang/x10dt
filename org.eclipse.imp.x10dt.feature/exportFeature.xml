<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.imp.x10dt.feature" default="build.feature.jar" basedir=".">
	<import file="../org.eclipse.imp.x10dt.feature/buildCommon.xml"/>
	<import file="../org.eclipse.imp.x10dt.update/buildFeatureCommon.xml"/>

	<target name="init">
		<property name="feature.name"        value="org.eclipse.imp.x10dt"/>
		<property name="feature.version"     value="${x10dt.version}"/>
		<property name="feature.temp.folder" value="${basedir}/feature.temp.folder"/>
		<property name="feature.destination" value="${basedir}"/>
	</target>

	<target name="all.plugins"
		depends="build.x10.runtime,build.x10.compiler,build.x10dt,build.x10dt.core,build.x10dt.ui">
	</target>

	<!-- RMF Copy the plugin jars to the 'plugins' folder so that exportUpdate script can see it -->
	<target name="gather.plugin.jars" depends="all.plugins">
		<delete failonerror="false">
			<fileset dir="plugins" includes="*.jar"/>
		</delete>
		<mkdir dir="plugins"/>
		<copy todir="plugins" file="../x10.runtime/x10.runtime_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../x10.compiler/x10.compiler_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.x10dt.core/org.eclipse.imp.x10dt.core_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.x10dt.ui/org.eclipse.imp.x10dt.ui_${plugins.version.31}.jar"/>
		<copy todir="plugins" file="../org.eclipse.imp.x10dt/org.eclipse.imp.x10dt_${x10dt.version}.jar"/>
	</target>

	<!-- ========================================================================================= -->

	<target name="build.x10.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="x10.runtime"/>
		</antcall>
	</target>

	<target name="build.x10.compiler" depends="build.x10.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="x10.compiler"/>
		</antcall>
	</target>

	<target name="build.x10dt.ui" depends="build.x10.compiler,build.x10dt.core">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.x10dt.ui"/>
		</antcall>
	</target>

	<target name="build.x10dt.core" depends="build.x10.compiler">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.x10dt.core"/>
		</antcall>
	</target>

	<target name="build.x10dt" depends="build.x10dt.core,build.x10dt.ui">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.imp.x10dt"/>
		</antcall>
	</target>
</project>
