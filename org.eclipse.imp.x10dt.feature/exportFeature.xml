<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.safari.x10dt.feature" default="build.feature.jar" basedir=".">
	<import file="../org.eclipse.safari.x10dt.feature/buildCommon.xml"/>
	<import file="../com.ibm.watson.safari.update/buildFeatureCommon.xml"/>

	<target name="init">
		<property name="feature.name"        value="org.eclipse.safari.x10dt"/>
		<property name="feature.version"     value="${x10dt.version}"/>
		<property name="feature.temp.folder" value="${basedir}/feature.temp.folder"/>
		<property name="feature.destination" value="${basedir}"/>
	</target>

	<target name="all.plugins"
		depends="build.x10.runtime,build.x10.compiler,build.x10.uide,build.safari.x10,build.safari.x10dt">
	</target>

	<!-- RMF Copy the plugin jars to the 'plugins' folder so that exportUpdate script can see it -->
	<target name="gather.plugin.jars" depends="all.plugins">
		<delete failonerror="false">
			<fileset dir="plugins" includes="*.jar"/>
		</delete>
		<mkdir dir="plugins"/>
		<copy todir="plugins" file="../com.ibm.watson.safari.x10/com.ibm.watson.safari.x10_${feature.version}.jar"/>
		<copy todir="plugins" file="../x10.compiler/x10.compiler_${feature.version}.jar"/>
		<copy todir="plugins" file="../x10.runtime/x10.runtime_${feature.version}.jar"/>
		<copy todir="plugins" file="../x10.uide/x10.uide_${feature.version}.jar"/>
		<copy todir="plugins" file="../org.eclipse.safari.x10dt/org.eclipse.safari.x10dt_${feature.version}.jar"/>
	</target>

	<!-- ========================================================================================= -->

	<target name="build.x10.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="x10.runtime"/>
		</antcall>
	</target>

	<target name="build.x10.compiler" depends="build.x10.runtime">
		<antcall target="build.child">
			<param name="plugin.id" value="x10.compiler"/>
		</antcall>
	</target>

	<target name="build.x10.uide" depends="build.x10.compiler,build.safari.x10">
		<antcall target="build.child">
			<param name="plugin.id" value="x10.uide"/>
		</antcall>
	</target>

	<target name="build.safari.x10" depends="build.x10.compiler">
		<antcall target="build.child">
			<param name="plugin.id" value="com.ibm.watson.safari.x10"/>
		</antcall>
	</target>

	<target name="build.safari.x10dt" depends="build.safari.x10,build.x10.uide">
		<antcall target="build.child">
			<param name="plugin.id" value="org.eclipse.safari.x10dt"/>
		</antcall>
	</target>
</project>
