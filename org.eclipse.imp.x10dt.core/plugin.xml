<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="X10Builder"
         name="X10 Compiler"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run class="com.ibm.watson.safari.x10.X10Builder"/>
      </builder>
   </extension>
   <extension
         id="x10nature"
         name="X10 Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="com.ibm.watson.safari.x10.X10ProjectNature"/>
      </runtime>
      <builder id="com.ibm.watson.safari.x10.X10Builder"/>
      <requires-nature id="org.eclipse.jdt.core.javanature"/>
   </extension>
   <extension
         id="problemMarker"
         name="X10 Problem Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
      <super type="org.eclipse.core.resources.textmarker"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.ibm.watson.safari.x10"
            name="X10"/>
      <wizard
            category="com.ibm.watson.safari.x10"
            class="com.ibm.watson.safari.x10.wizards.NewX10SourceWizard"
            hasPages="true"
            icon="icons/sample.gif"
            id="com.ibm.watson.safari.x10.wizards.NewX10SourceWizard"
            name="X10 Source file"/>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.ibm.watson.safari.x10.preferences.X10PreferencePage"
            id="com.ibm.watson.safari.x10.preferences.X10PreferencePage"
            name="X10 Preferences"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="com.ibm.watson.safari.x10.preferences.PreferenceInitializer"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.ibm.watson.safari.x10.actionSet"
            label="X10 Actions"
            visible="true">
         <menu
               id="x10Menu"
               label="X10">
            <separator name="x10Group"/>
         </menu>
         <action
               class="com.ibm.watson.safari.x10.actions.BuilderEnable"
               icon="icons/sample.gif"
               id="com.ibm.watson.safari.x10.actions.BuilderEnable"
               label="&amp;Enable Builder"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Hello, Eclipse world"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="com.ibm.watson.safari.x10.contextMenu"
            nameFilter="*"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               id="com.ibm.watson.safari.x10.menu1"
               label="X10"
               path="additions">
            <separator name="group1"/>
         </menu>
         <action
               class="com.ibm.watson.safari.x10.actions.ProjectBuilderEnable"
               enablesFor="1"
               id="com.ibm.watson.safari.x10.newAction"
               label="Enable Builder"
               menubarPath="com.ibm.watson.safari.x10.menu1/group1"/>
      </objectContribution>
   </extension>

</plugin>
